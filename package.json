{
    "name": "a-simple-cache",
    "description": "Simple in-memory cache with additional utilities",
    "version": "1.0.4",
    "scripts": {
        "build": "tsc",
        "build:functional": "tsc -p test/functional/tsconfig.json",
        "prepare": "npm run build",
        "test": "npm run mocha:issue:4179 && mocha",
        "mocha:issue:4179": "mkdir -p dist/src && touch dist/src/index.js",
        "coverage": "nyc npm run test",
        "coverage:open": "open coverage/lcov-report/index.html",
        "lint": "eslint . --ext .ts",
        "lint:fix": "npm run lint -- --fix"
    },
    "pre-commit": [
        "lint",
        "test"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/karniol/a-simple-cache.git"
    },
    "keywords": [
        "memcache",
        "in-memory",
        "cache"
    ],
    "author": "Charlie Karniol",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/karniol/a-simple-cache/issues"
    },
    "homepage": "https://github.com/karniol/a-simple-cache#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.8",
        "@types/mocha": "^7.0.1",
        "@types/sinon": "^7.5.1",
        "@types/sinon-chai": "^3.2.3",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-json": "^2.0.1",
        "eslint-plugin-prettier": "^3.1.2",
        "mocha": "^7.0.1",
        "np": "^6.0.0",
        "nyc": "^15.0.0",
        "pre-commit": "^1.2.2",
        "prettier": "^1.19.1",
        "sinon": "^8.1.1",
        "sinon-chai": "^3.4.0",
        "source-map-support": "^0.5.16",
        "ts-node": "^8.6.2",
        "ts-sinon": "github:karniol/ts-sinon",
        "typescript": "^3.7.5"
    },
    "dependencies": {},
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "files": [
        "/dist"
    ],
    "mocha": {
        "package": "./package.json",
        "extension": [
            "ts"
        ],
        "spec": [
            "test/**/*.test.ts"
        ],
        "recursive": true,
        "file": [],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "ui": "bdd",
        "exit": true
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "cache": false,
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/index.ts",
            "**/*.d.ts",
            "**/*.test.ts"
        ],
        "reporter": [
            "text",
            "text-summary",
            "json",
            "lcov"
        ],
        "report-dir": "./coverage",
        "temp-dir": "./.nyc_output",
        "check-coverage": true,
        "branches": 90,
        "lines": 90,
        "functions": 90,
        "statements": 90
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "settings": {
            "import/parsers": {
                "@typescript-eslint/parser": [
                    ".ts"
                ]
            },
            "import/resolver": {
                "typescript": {}
            }
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "rules": {
            "@typescript-eslint/indent": [
                2,
                4
            ],
            "@typescript-eslint/no-explicit-any": [
                0
            ],
            "@typescript-eslint/no-empty-function": [
                0
            ],
            "@typescript-eslint/no-use-before-define": [
                0
            ],
            "semi": [
                2
            ],
            "quotes": [
                2,
                "single"
            ]
        }
    }
}
